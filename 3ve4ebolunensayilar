import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int sayi,toplam = 0, sayac=0;

        System.out.print("Sayıyı Giriniz :");
        sayi = input.nextInt();

        for (int i = 0;i <= sayi;i++){
            if(i%12 == 0){
                sayac+=1;
                toplam+=i;
                System.out.println("3 ve 4'e Ortak Bölünen Sayılar :  " + i);
            }
        }
        System.out.print("3 ve 4'e Ortak Bölünen Sayıların Ortalaması : " + toplam/sayac);
    }
}
