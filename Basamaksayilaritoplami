import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Sayıyı Giriniz : ");
        int number = input.nextInt();
        int basValue =0;
        int total = 0;

        while(number != 0){
            basValue = number % 10;
            number = number /10;
            total += basValue;
            }
        System.out.println("Girdiğiniz Sayının Basamak Değerleri Toplamı : " + total);

    }
}
