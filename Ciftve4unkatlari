import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int sayi,toplam=0;

        do{
            System.out.print("Sayıyı Giriniz : ");
            sayi = input.nextInt();
            if(sayi%4 == 0){
                toplam+=sayi;
            }
        }while(sayi%2 == 0);
        System.out.print("Çift ve 4'e Bölünen Sayıların Toplamı : " + toplam);

    }
}
